CREATE TABLE flight
( Flight_no int NOT NULL,
Arrival_hr VARCHAR(50),
Departure_hr VARCHAR(3),
PRIMARY KEY(flight_no),
FOREIGN KEY(t_id) REFERENCES ticket (t_id));

