CREATE TABLE Ticket
(T_ID INT NOT NULL,
P_name VARCHAR(10) NOT NULL,
Destination VARCHAR(10),
Business_class VARCHAR(50),
Economic_class VARCHAR(40),
PRIMARY KEY(T_id));

